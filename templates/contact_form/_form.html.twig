{{ form_start(form, {'attr': {'class': 'container'}}) }}
    <div class="top-row">
        <div class="row row-left">
            <div class="form-group">
                {{ form_label(form.firstname) }}
                {{ form_widget(form.firstname) }}
                <div class="errors">
                    {{ form_errors(form.firstname) }}
                </div>
            </div>
            <div class="form-group bottom">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
                <div class="errors">
                    {{ form_errors(form.email) }}
                </div>
            </div>
        </div>
        <div class="row row-right">
            <div class="form-group">
                {{ form_label(form.lastname) }}
                {{ form_widget(form.lastname) }}
                <div class="errors">
                    {{ form_errors(form.lastname) }}
                </div>
            </div>
            <div class="form-group bottom">
                {{ form_label(form.phone) }}
                {{ form_widget(form.phone) }}
                <div class="errors">
                    {{ form_errors(form.phone) }}
                </div>
            </div>
        </div>
    </div>
    <div class="form-solo">
        {{ form_label(form.topic) }}
        {{ form_widget(form.topic) }}
        <div class="errors-w">
            {{ form_errors(form.topic) }}
        </div>
    </div>
    <div class="form-solo">
        {{ form_label(form.message) }}
        <div class="select">
            {{ form_widget(form.message) }}
            <div class="errors-w">
                {{ form_errors(form.message) }}
            </div>
        </div>
    </div>
    <div class="container-checkbox">
        <div class="checkbox-label">
            {{ form_label(form.terms) }}
            {{ form_widget(form.terms) }}
        </div>
        <div class="errors-w">
            {{ form_errors(form.terms) }}
        </div>
    </div>
    <div class="container-button">
        <button id="btn_submit" class="btn">{{ button_label|default('Envoyer') }}</button>
    </div>
    {% for message in app.flashes('success') %}
        <div class="alert-success">
            {{ message }}
        </div>
    {% endfor %}
{{ form_end(form) }}
